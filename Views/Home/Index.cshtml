@model Users

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Register</h1>
    <a href="/login">Already Register?</a>
    <div id="FormBox">
            <form asp-action="Register" asp-controller="Home" method="POST" asp-route-id="UserId">
               <span asp-validation-for="FirstName"></span>
                <p>
                    <label asp-for="FirstName"></label>
                    <input type="text" asp-for="FirstName"/>
                </p>
                    
                <span asp-validation-for="LastName"></span>
                <p>
                    <label asp-for="LastName"></label>
                    <input type="text" asp-for="LastName"/>
                </p>
                
                <span asp-validation-for="Email"></span>
                <p>
                    <label asp-for="Email"></label>        
                    <input type="" asp-for="Email"/>
                </p>

                 <span asp-validation-for="PassWord"></span>
                <p>
                    <label asp-for="PassWord"></label>
                    <input type="text" asp-for="PassWord"/>
                </p>

                <span asp-validation-for="ConfirmPW"></span>
                <p>
                    <label asp-for="ConfirmPW"></label>
                    <input type="text" asp-for="ConfirmPW"/>
                </p>
                    
                <p></p>
                <input value="Submit" type="submit"/>

            </form>
        </div>

    
</body>
</html>